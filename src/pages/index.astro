---
import "../styles/global.scss";
import "../styles/index.scss";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/Other-Heaven.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Other Heaven</title>
    <script>
      import { ModelViewerElement } from "@google/model-viewer";
      if (
        typeof customElements !== "undefined" &&
        !customElements.get("model-viewer")
      ) {
        customElements.define("model-viewer", ModelViewerElement);
      }
    </script>
  </head>
  <body>
    <div class="LutherContainer">
      <div class="RoutesContainer">
        <a style="--i:0;">Blog</a>
        <a style="--i:1;">Portfolio</a>
        <a style="--i:2;">Music</a>
        <a style="--i:3;">Dev Logs</a>
        <a style="--i:4;">Games</a>
        <a style="--i:5;">Socials</a>
      </div>
      <model-viewer
        class="Sigil"
        src="src/3d/ThelmaSigil.gltf"
        camera-controls
        interaction-prompt="none"
        autoplay
        animation-name="OtherHeaven"></model-viewer>
      <model-viewer
        class="Luther"
        src="src/3d/AstroLuther-DARE.gltf"
        camera-controls
        interaction-prompt="none"
        auto-rotate
        auto-rotate-delay="1200"
        rotation-per-second="120%"
        autoplay
        animation-name="DARE"></model-viewer>
    </div>
  </body>
</html>

<script>
import type { ModelViewerElement } from "@google/model-viewer";

  document.addEventListener('DOMContentLoaded', () => {
    const sigilViewer = document.querySelector('.Sigil') as ModelViewerElement;
    if (sigilViewer) {
      sigilViewer.addEventListener('load', () => {
        sigilViewer.timeScale = 0.1;
      });
    }
  });
</script>
